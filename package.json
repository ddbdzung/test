{
  "name": "expressjs-crud",
  "version": "1.0.0",
  "description": "ExpressJS CRUD",
  "main": "bootstrap.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/bootstrap.js",
    "start": "cross-env NODE_ENV=production node dist/bootstrap.js",
    "build": "cross-env NODE_ENV=production babel src --out-dir dist --delete-dir-on-start --source-maps",
    "build:dev": "cross-env NODE_ENV=development babel src --out-dir dist --watch --source-maps",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "ci:prod": "npm ci --omit=dev --ignore-scripts",
    "build:prod": "npm run build && npm prune --production",
    "ci-build": "npm run ci:prod && npm run build:prod",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,mjs,json}\" \"wiki/**/*.{js,jsx,mjs,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,mjs,json}\" \"wiki/**/*.{js,jsx,mjs,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:dev": "jest --watch --coverage",
    "prepare": "husky || true",
    "release": "standard-version",
    "release:preview": "cross-env-shell ./scripts/release-dry-run.sh",
    "release:help": "cross-env-shell ./scripts/release-help.sh"
  },
  "dependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.27.1",
    "@babel/plugin-transform-object-rest-spread": "^7.28.0",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/runtime": "^7.27.6",
    "@joi/date": "^2.1.1",
    "@types/express": "^5.0.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "core-js": "^3.44.0",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^9.1.0",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "rimraf": "^6.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/node": "^7.28.0",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.3.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.31.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0"
  },
  "private": true,
  "keywords": [
    "ExpressJS",
    "CRUD"
  ],
  "lint-staged": {
    "*.{js,jsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "author": "Dang Duc B. Dzung (David)",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1"
}
